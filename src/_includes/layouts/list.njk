
{% extends "layouts/base.njk" %}
{% block mainContent %}
<main class="container py-10">
    <div class="grid grid-cols-1 gap-6 sm:grid-cols-2 lg:grid-cols-3">
    {% if cat %}
    {% set postList = cat | articlesByCategory(collections.articles) %}
    {% else %}
    {% set postList = collections.articles %}
    {% endif %}
    {%- for post in postList | reverse -%}
        {% include "components/blog/card.njk" %}
    {%- endfor -%}
    </div>
</main>
{% endblock %}



